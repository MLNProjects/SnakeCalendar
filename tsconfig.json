{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": false,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/@Types",
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "./src/**/*.jsx"
  ]
}
